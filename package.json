{
  "name": "ai-commander",
  "displayName": "AI Commander",
  "description": "AI-powered CLI command manager for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-commander",
          "title": "AI Commander",
          "icon": "$(terminal)"
        }
      ]
    },
    "views": {
      "ai-commander": [
        {
          "id": "aiCommander.commands",
          "name": "Commands"
        }
      ]
    },
    "commands": [
      {
        "command": "aiCommander.create",
        "title": "Create Command",
        "icon": "$(sparkle)",
        "category": "AI Commander"
      },
      {
        "command": "aiCommander.run",
        "title": "Run Command",
        "icon": "$(play)",
        "category": "AI Commander"
      },
      {
        "command": "aiCommander.search",
        "title": "Search Commands",
        "icon": "$(search)",
        "category": "AI Commander"
      },
      {
        "command": "aiCommander.copy",
        "title": "Copy Command",
        "icon": "$(copy)",
        "category": "AI Commander"
      },
      {
        "command": "aiCommander.edit",
        "title": "Edit Command",
        "icon": "$(edit)",
        "category": "AI Commander"
      },
      {
        "command": "aiCommander.delete",
        "title": "Delete Command",
        "icon": "$(trash)",
        "category": "AI Commander"
      },
      {
        "command": "aiCommander.sync",
        "title": "Sync Commands",
        "icon": "$(sync)",
        "category": "AI Commander"
      },
      {
        "command": "aiCommander.login",
        "title": "GitHub Login",
        "category": "AI Commander"
      },
      {
        "command": "aiCommander.settings",
        "title": "Settings",
        "icon": "$(gear)",
        "category": "AI Commander"
      },
      {
        "command": "aiCommander.configureAI",
        "title": "Configure AI Provider",
        "category": "AI Commander"
      },
      {
        "command": "aiCommander.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "AI Commander"
      },
      {
        "command": "aiCommander.runFromTree",
        "title": "Run",
        "icon": "$(play)"
      },
      {
        "command": "aiCommander.copyFromTree",
        "title": "Copy",
        "icon": "$(copy)"
      }
    ],
    "keybindings": [
      {
        "command": "aiCommander.create",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiCommander.create",
          "when": "view == aiCommander.commands",
          "group": "navigation@1"
        },
        {
          "command": "aiCommander.refresh",
          "when": "view == aiCommander.commands",
          "group": "navigation@2"
        },
        {
          "command": "aiCommander.sync",
          "when": "view == aiCommander.commands",
          "group": "navigation@3"
        },
        {
          "command": "aiCommander.settings",
          "when": "view == aiCommander.commands",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "aiCommander.runFromTree",
          "when": "view == aiCommander.commands && viewItem == command",
          "group": "inline@1"
        },
        {
          "command": "aiCommander.copyFromTree",
          "when": "view == aiCommander.commands && viewItem == command",
          "group": "inline@2"
        },
        {
          "command": "aiCommander.edit",
          "when": "view == aiCommander.commands && viewItem == command",
          "group": "1_actions@1"
        },
        {
          "command": "aiCommander.delete",
          "when": "view == aiCommander.commands && viewItem == command",
          "group": "1_actions@2"
        }
      ]
    },
    "configuration": {
      "title": "AI Commander",
      "properties": {
        "aiCommander.ai.provider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "ollama",
            "azure",
            "custom"
          ],
          "default": "openai",
          "description": "AI provider for command generation"
        },
        "aiCommander.ai.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "AI model to use for command generation"
        },
        "aiCommander.ai.customEndpoint": {
          "type": "string",
          "default": "",
          "description": "Custom API endpoint for AI provider"
        },
        "aiCommander.execution.mode": {
          "type": "string",
          "enum": [
            "terminal",
            "background"
          ],
          "default": "terminal",
          "description": "How to execute commands"
        },
        "aiCommander.execution.reuseTerminal": {
          "type": "boolean",
          "default": true,
          "description": "Reuse the same terminal for command execution"
        },
        "aiCommander.execution.confirmDestructive": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation before running destructive commands"
        },
        "aiCommander.view.showRecent": {
          "type": "boolean",
          "default": true,
          "description": "Show recent commands section"
        },
        "aiCommander.view.recentCount": {
          "type": "number",
          "default": 5,
          "description": "Number of recent commands to show"
        },
        "aiCommander.view.groupBy": {
          "type": "string",
          "enum": [
            "tags",
            "source",
            "none"
          ],
          "default": "tags",
          "description": "How to group commands in the sidebar"
        },
        "aiCommander.sync.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable GitHub Gist sync"
        },
        "aiCommander.sync.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
